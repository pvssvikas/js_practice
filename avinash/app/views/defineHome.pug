extends layout

block content
    .container-fluid
        .row
            .page-header.header_site
                .clearfix
                    .pull-left
                        a(href='/')
                            img(src='/images/product-home.png' style='height:30px')
                    .pull-left
                        h1 Home
    .container
        .row
            .pull-left
                ol.breadcrumb#navigator
                    li
                        a(href= '/mainScreen') Home
                    li 
                        a(href = '/defineHome') Configure Home
        .row    
            .col-md-5.col-sm-5
                .panel.panel-primary.boxSize
                    .panel-header
                    .panel-body
                        #hometree
            .col-md-7.col-sm-7.col-xs-12
                .panel.panel-primary.boxSize
                     .panel-body
                            form.form-horizontal(role='form' action='/mainScreen' method='get' id = 'homeForm')
                                .form-group
                                    ul#roomsConfigMenu.nav.nav-pills
                                     
                                    div.tab-content#roomsConfig
                                       
                                .form-group
                                    .col-xs-4.col-xs-offset-8.col-sm-offset-9.col-sm-4.col-md-offset-8.col-md-6
                                        input(class='btn btn-primary' id = "homeDone" value = "Save" type = 'submit'  )
    script(src='/javascripts/room-tabPillTemplate.js')
    script(src='/javascripts/room-tabContentTemplate.js')