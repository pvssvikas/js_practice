extends layout

block content
  .container-fluid
    .row
      .page-header.header_site
        .clearfix
          .pull-left
            a(href='/')
              img(src='/images/product-home.png' style='height:30px')
          .pull-left
            h1 Home
  .container
  .row
    .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2.col-xs-8.col-xs-offset-2
      .panel.panel-primary
        .panel-heading
          h3.panel-title Register
        .panel-body
          form.form-horizontal(role='form' action='/mainScreen' method='POST')
            .form-group
              label.col-sm-3.control-label(for='inputfirstname') First Name
              .col-sm-9
                input#inputEmail.form-control(type='text', placeholder='Enter First Name' name='first_name' required)
            .form-group
              label.col-sm-3.control-label(for='inputlastname') Last Name
              .col-sm-9
                input#inputPassword.form-control(type='text', placeholder='Enter Last Name' name='last_name' required)
            .form-group
              label.col-sm-3.control-label(for='inputEmail3') Email
              .col-sm-9
                input#inputEmail.form-control(type='email', placeholder='Email' name='email' required)
            .form-group
              label.col-sm-3.control-label(for='inputPassword') Password
              .col-sm-9
                input#inputPassword.form-control(type='password', placeholder='Password' name='password' required)
            .form-group.row
              .btn-group.btn-group-justified
                .col-sm-6.col-md-2.col-md-offset-6.col-sm-offset-6.col-xs-2.col-xs-offset-8
                  input(type='submit' class='btn btn-primary' value='Register' name='login')