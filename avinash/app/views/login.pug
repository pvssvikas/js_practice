extends layout

block content
  .container-fluid
    .row
      .page-header.header_site
        .clearfix
          .pull-left
            a(href='/')
              img(src='/images/product-home.png' style='height:30px')
          .pull-left
            h1 Home
          
  .container
  .row
    .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2.col-xs-8.col-xs-offset-2
      .panel.panel-primary
        .panel-heading
          h3.panel-title Login
        .panel-body
          form.form-horizontal(role='form' action='/mainScreen' method='POST')
            .form-group
              label.col-sm-3.control-label(for='inputEmail') Email
              .col-sm-9
                input#inputEmail.form-control(type='email', placeholder='Email' name = 'email' required)
            .form-group
              label.col-sm-3.control-label(for='inputPassword') Password
              .col-sm-9
                input#inputPassword.form-control(type='password', placeholder='Password' name = 'password' required)
            .form-group.row
              .btn-group.btn-group-justified
                .col-sm-2.col-md-2.col-xs-2.col-sm-offset-4.col-xs-offset-4.col-md-offset-4
                  input(type='submit' value='sign-in' class='btn btn-primary' name='login')
                .col-sm-6.col-md-2.col-xs-4
                  a(href='/userReg' class='btn btn-primary') Register