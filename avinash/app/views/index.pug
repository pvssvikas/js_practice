extends layout

block content
  .container-fluid
    .row
      .page-header.header_site
        .clearfix
          .pull-left
            img(src='/images/product-home.png' style='height:30px')
          .pull-left
            h1 Home
          
  .container
  .row
    .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2.col-xs-8.col-xs-offset-2
      .panel.panel-primary
        .panel-heading
          h3.panel-title Login
        .panel-body
          form.form-horizontal(role='form')
            .form-group
              label.col-sm-3.control-label(for='inputEmail3') Email
              .col-sm-9
                input#inputEmail3.form-control(type='email', placeholder='Email')
            .form-group
              label.col-sm-3.control-label(for='inputPassword3') Password
              .col-sm-9
                input#inputPassword3.form-control(type='password', placeholder='Password')
            .form-group.row
              .btn-group.btn-group-justified
                .col-sm-2.col-sm-offset-4.col-md-2.col-xs-2
                  a(href='/signin' class='btn btn-primary') Sign-In
                .col-sm-6.col-md-2.col-md-offset-2.col-xs-4.col-xs-offset-6
                  a(href='/register' class='btn btn-primary') Register